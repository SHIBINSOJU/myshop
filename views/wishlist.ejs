<%- include('partials/header', { title: 'Wishlist' }) %>
<%- include('partials/navbar') %>

<main class="container">
  <h1 class="page-title">Your Wishlist</h1>

  <% if (locals.wishlistItems && wishlistItems.length > 0) { %>
    
    <div class="product-grid">
      <% wishlistItems.forEach(item => { %>
        
        <%- include('partials/product-card', { product: item }) %>
        
      <% }) %>
    </div>

  <% } else { %>
    
    <p style="text-align: center; font-size: 1.1rem; margin-bottom: 1.5rem;">
      You haven't added any items to your wishlist yet.
    </p>
    <a href="/products" class="btn-submit" style="display: block; width: 200px; margin: auto; text-align: center;">
      Shop Products
    </a>

  <% } %>
</main>

<%- include('partials/footer') %>
