<%- include('partials/header', { title: 'Admin' }) %>
<%- include('partials/navbar') %>

<main class="container">
  <h1 class="page-title">Admin Panel</h1>

  <% if (locals.message) { %>
    <p style="text-align: center; color: var(--accent-color); font-weight: bold;"><%= message %></p>
  <% } %>

  <div class="form-container" style="margin-top: 2rem;">
    <h2>Add New Product</h2>
    <form action="/admin/add-product" method="POST">
      
      <div class="form-group">
        <label for="name">Product Name</label>
        <input type="text" id="name" name="name" class="form-input" required>
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        <input type="url" id="image" name="image" class="form-input" required>
      </div>

      <div class="form-group">
        <label for="price">Price (e.g., 29.99)</label>
        <input type="number" id="price" name="price" step="0.01" class="form-input" required>
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        <input type="text" id="category" name="category" class="form-input" required>
      </div>
      
      <div class="form-group">
        <label for="rating">Rating (Optional, e.g., 4.7)</label>
        <input type="number" id="rating" name="rating" step="0.1" min="0" max="5" class="form-input">
      </div>

      <button type="submit" class="btn-submit">Add Product</button>
    </form>
  </div>
</main>

<%- include('partials/footer') %>
