<nav class="bg-white p-3 shadow-sm sticky top-0 z-10">
  <!-- Search bar -->
  <div class="relative">
    <form action="/products" method="GET" class="relative">
      <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
      <input 
        type="text" 
        name="q" 
        value="<%= (locals.currentQuery && currentQuery.q) ? currentQuery.q : '' %>"
        placeholder="creatine monohydrate" 
        class="w-full p-2.5 pl-10 rounded-lg bg-white text-gray-800 focus:outline-none focus:ring-2 focus:ring-red-500"
        aria-label="Search products"
      />
      <i class="fas fa-camera absolute right-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
    </form>
  </div>

  <!-- Top nav categories -->
  <div class="flex overflow-x-auto p-2 space-x-2 bg-white border-b border-gray-200 scrollbar-hide">
    <% const _activeCat = (typeof currentCategory !== 'undefined' && currentCategory) ? currentCategory.toLowerCase() : null; %>
    <a href="/" class="px-4 py-2 rounded-full text-sm font-semibold whitespace-nowrap <%= !_activeCat ? 'bg-red-500 text-white shadow-md' : 'bg-white text-gray-700 hover:bg-gray-50' %>">For You</a>
    <a href="/products?category=fashion" class="px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap <%= _activeCat === 'fashion' ? 'bg-red-500 text-white shadow-md' : 'bg-white text-gray-700 hover:bg-gray-50' %>">Fashion</a>
    <a href="/products?category=mobile" class="px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap <%= _activeCat === 'mobile' ? 'bg-red-500 text-white shadow-md' : 'bg-white text-gray-700 hover:bg-gray-50' %>">Mobile</a>
    <a href="/products?category=electronics" class="px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap <%= _activeCat === 'electronics' ? 'bg-red-500 text-white shadow-md' : 'bg-white text-gray-700 hover:bg-gray-50' %>">Electronics</a>
    <a href="/products?category=appliances" class="px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap <%= _activeCat === 'appliances' ? 'bg-red-500 text-white shadow-md' : 'bg-white text-gray-700 hover:bg-gray-50' %>">Appliances</a>
  </div>
</nav>
